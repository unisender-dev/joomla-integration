        <field name="field_6_name" type="hidden"/>
        <field name="field_6_title" type="hidden"/>
        <field name="field_6_mand" type="hidden"/>
        <field name="field_7_name" type="hidden"/>
        <field name="field_7_title" type="hidden"/>
        <field name="field_7_mand" type="hidden"/>
        <field name="field_8_name" type="hidden"/>
        <field name="field_8_title" type="hidden"/>
        <field name="field_8_mand" type="hidden"/>
        <field name="field_9_name" type="hidden"/>
        <field name="field_9_title" type="hidden"/>
        <field name="field_9_mand" type="hidden"/>
    </fieldset>
    </fields>
    </config>
</extension>
